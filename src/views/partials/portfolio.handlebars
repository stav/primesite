</div>

<!-- 3dFlipVertical card -->
<div id="portfolio-card" class="modal modal-fx-3dSlit">
  <div class="modal-background"></div>
  <div class="modal-content">
    <!-- content -->
    <div class="card">
      <div class="card-image">
        <figure class="image">
          <img id="profileImage" src="" alt="Profile image" title="Click to toggle information">
        </figure>
      </div>
      <div class="card-content">
        <div class="content has-text-centered">
          Click the image above to toggle between the long and short versions.
        </div>
      </div>
    </div>
    <!-- end content -->
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
<!-- End Portfolio Content -->
